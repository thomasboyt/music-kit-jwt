{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],

  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],

  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },

  "rules": {
    "no-console": "off",
    "@typescript-eslint/no-explicit-any": "off"
  }
}